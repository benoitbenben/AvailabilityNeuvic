<div class="container">
  <div class="update" style="text-align: center">
    <h2>Modifier les dates</h2>
    <%= image_tag "calendrier.png", height: 200 %>
<!-- Flatpicker shared yield  houses/show.html.erb-->
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">

      <%= simple_form_for [@house, @booking] do |f| %>
<!-- replace class: "datepicker" by id: start_date & id: end_date for range -->
      <%= f.input :start_on, as: :string, required: false, input_html: {id: "start_date"} %>
      <%= f.input :end_on, as: :string, required: false, input_html: {id: "end_date"} %>
      <%= f.button :submit, "Update", class: "btn btn-danger btn-block" %>
    <% end %>
  </div>
</div>


