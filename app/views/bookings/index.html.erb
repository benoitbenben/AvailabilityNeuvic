<div class="container">
  <div class="index-title text-center">
    <h1>List of all the bookings</h1>
  </div>

  <div class="row">
<!--
tri par dates
faire une partial pour booking à la place de room card comme ds partypix
 -->


    <% @bookings.each do |booking| %>
      <div class="col-xs-12 col-sm-4 col-sm-offset-1 list-inline">

        <div class="flatcard card-container text-center">

          <p><%= booking.start_on %> à <%= booking.end_on %>
          Soit :
                <%= 1  + (booking.end_on - booking.start_on).to_i  %>
          nuit(s).</p>

          <p><%= booking.house.name %> by <strong><%= booking.user.name %></strong></p>

          <%= link_to edit_booking_path(booking), class: "bottom-menu-element" do %>
            <i class="fas fa-edit fa-1x bottom-menu-img"></i>
           Edit booking
          <% end %>

          <%= link_to booking_path(booking), method: :delete,
            data: { confirm: "Are you sure ?" }, class: "bottom-menu-element" do %>
            <i class="fas fa-trash-alt fa-1x bottom-menu-img"></i>
            Delete Booking
          <% end %>

        </div>
      </div>
    <% end %>

  </div>
</div>
